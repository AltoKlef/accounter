<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://periodListView.title"
      focusComponent="periodsDataGrid">
    <data>
        <collection id="periodsDc"
                    class="com.company.accounter.entity.Period">
            <fetchPlan extends="_base"/>
            <loader id="periodsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Period_ e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="periodsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="periodsDataGrid.createAction"/>
            <button id="editButton" action="periodsDataGrid.editAction"/>
            <button id="removeButton" action="periodsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="periodsDl"/>
        </hbox>
        <dataGrid id="periodsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="periodsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="duration"/>
                <column property="opened" editable="true"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
